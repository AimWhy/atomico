{
  "name": "@atomico/core",
  "description": "Atomico is a library for the creation of interfaces only using functions.",
  "version": "1.3.2",
  "main": "dist/atomico.js",
  "umd:main": "dist/atomico.umd.js",
  "module": "dist/atomico.mjs",
  "source": "src/index.js",
  "author": "Matias Trujillo Olivares",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/atomicojs/core.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "build-all": "bolt ws run build",
    "prepare": "npm run build && npm test"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.1.0",
    "babel-preset-env": "^1.7.0",
    "bolt": "^0.22.6",
    "jest": "^24.1.0",
    "regenerator-runtime": "^0.13.1",
    "rollup": "^1.1.2",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-size-snapshot": "^0.8.0",
    "rollup-plugin-terser": "^4.0.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      [
        "@babel/preset-react",
        {
          "pragma": "h",
          "throwIfNamespace": false
        }
      ]
    ]
  },
  "jest": {
    "testRegex": "./test/.*.test.js$",
    "rootDir": "."
  },
  "bolt": {
    "workspaces": [
      "docs/demo/*"
    ]
  }
}
