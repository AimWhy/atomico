{
  "include": [
      "src/**/*", 
      "types/**/*",
  ],
  "exclude": ["src/**/tests/","tests/"],
  "compilerOptions": {
    "strict": false,
    "strictNullChecks":true,
    "noUnusedLocals": true,
    "jsx": "react-jsx",
    "checkJs": true,
    "jsxImportSource": "../",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "noEmit": true,
    "lib": ["ESNext", "DOM","DOM.Iterable"],
    "paths":{
      "core":["./types/core.d.ts"],
      "dom":["./types/dom.d.ts"],
      "component":["./types/component.d.ts"],
      "context":["./types/context.d.ts"],
      "vnode":["./types/vnode.d.ts"]
    },
  }
}